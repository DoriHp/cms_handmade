<style type="text/css">
    #banner{
        height: 100px; 
        background-color: #fff; 
        background-clip: content-box; 
        border-radius: 20px; 
        outline: none; 
        display: flex;
    }
    #page_image{
        width: 70px; 
        height: 70px; 
        border-radius: 50px !important; 
        margin-top: 15px; 
        margin-left: 30px;
        background-size: cover; 
        background-repeat: no-repeat;
    }
    #page_info{
        flex-grow: 1; 
        text-align: left; 
        padding-top: 15px; 
        padding-bottom: 15px;
    }
    #page_info h4, #page_info p, #page_info a{
        margin: 5px;
        margin-left: 15px;
    }
    
    #page_info a{
        font-weight: bold;
    }

    #page_info a:hover{
        text-decoration: none;
    }

    #num_of_likes{
        height: 100px; 
        display: flex;
        color: #337ab7; 
        flex-direction: row;
    }
    #num_of_likes i{
        margin-left: 15px;
        line-height: 100px;
    }
    #num_of_likes div{
        height: 100px;
    }
</style>
<!-- END PAGE LEVEL STYLES -->
</head>
